div.box
  = form_for @changeset, @update_action, [method: "put"], fn score_form ->
      div.columns
        div.column
          h5.title.is-5 = gettext("Please select which dices to roll new!")
          div.select.is-multiple
            = select(score_form, :score_type, @score_types)

      div.columns
        div.column
          = submit gettext("Update"), class: "button is-primary"
